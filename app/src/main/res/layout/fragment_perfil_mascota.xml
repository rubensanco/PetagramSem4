<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.PerfilMascotaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/ivMiMascota"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:src="@drawable/perro_02"
                android:layout_gravity="center_vertical"
                app:civ_border="true"
                app:civ_border_color="@color/colorPrimary"
                app:civ_border_width="4dp"
                />

            <TextView
                android:id="@+id/tvMiMascotaNombre"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/mimascota"
                android:theme="@style/TituloNombre"
                android:textSize="@dimen/nombrets"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/reciclador_mimascota"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="3dp"
            android:scrollbars="vertical"
            android:layout_weight="2"/>


    </LinearLayout>

</FrameLayout>
